[Unit]
Description={{description}}
{{#unitOptions}}
{{key}}={{value}}
{{/unitOptions}}
{{^unitOptions}}
After=network.target nss-lookup.target
{{/unitOptions}}

[Service]
ExecStart=/usr/bin/npm start
WorkingDirectory=/etc/systemd/systemm/{{name}}
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier={{name}}
User={{username}}
Group={{username}}
{{#environment}}
Environment={{key}}={{value}}
{{/environment}}
{{#serviceOptions}}
{{key}}={{value}}
{{/serviceOptions}}

[Install]
WantedBy=multi-user.target
